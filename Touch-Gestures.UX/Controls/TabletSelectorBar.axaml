<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:TouchGestures.UX.ViewModels"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="40"
             x:DataType="vm:BindingsOverviewViewModel"
             x:Class="TouchGestures.UX.Controls.TabletSelectorBar">

  <Design.DataContext>
    <vm:BindingsOverviewViewModel />
  </Design.DataContext>

  <UserControl.Styles>

    <Style Selector="Border">
      <Setter Property="Background" Value="{StaticResource AccentColorBrush}" />
      <Setter Property="BorderBrush" Value="{StaticResource BorderColorBrush}" />
      <Setter Property="Padding" Value="4" />
    </Style>

    <Style Selector="Border > Grid > ComboBox">
      <Setter Property="IsEnabled" Value="{Binding IsReady}" />
    </Style>

    <Style Selector="Border > Grid > Button">
      <Setter Property="IsEnabled" Value="{Binding IsReady}" />
    </Style>

  </UserControl.Styles>

  <Border>
    <Grid>
      <ComboBox ItemsSource="{Binding Tablets}" SelectedIndex="{Binding SelectedTabletIndex}" HorizontalAlignment="Left" />
      <Button Command="{Binding RequestSave}" Content="Save" HorizontalAlignment="Right" />
    </Grid>
  </Border>

</UserControl>
