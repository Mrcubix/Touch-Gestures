<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>TouchGestures.Lib</RootNamespace>
    <NoWarn>$(NoWarn); NETSDK1138; VSTHRD200</NoWarn>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OTD06)' != 'true'">
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(OTD06)' == 'true'">
    <TargetFramework>net6.0</TargetFramework>
  </PropertyGroup>

  <!-- Only Embed debug symbols for the Release configuration -->
  <PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <DebugType>embedded</DebugType>
  </PropertyGroup>

  <!-- Only for OTD 0.5.x -->
  <ItemGroup Condition="'$(OTD06)' != 'true'">
    <ProjectReference Include="../.modules/OpenTabletDriver.External/.modules/OpenTabletDriver/OpenTabletDriver.Desktop/OpenTabletDriver.Desktop.csproj" PrivateAssets="all" />
    <ProjectReference Include="../.modules/OpenTabletDriver.External/OpenTabletDriver.External.Common/OpenTabletDriver.External.Common.csproj" />
    <ProjectReference Include="../.modules/OTD.EnhancedOutputMode/OTD.EnhancedOutputMode.Lib/OTD.EnhancedOutputMode.Lib.csproj" />
  </ItemGroup>

  <!-- Only for OTD 0.6.x -->
  <ItemGroup Condition="'$(OTD06)' == 'true'">
    <ProjectReference Include="../.modules/OpenTabletDriver.External.Bulletproof/.modules/OpenTabletDriver/OpenTabletDriver.Desktop/OpenTabletDriver.Desktop.csproj" PrivateAssets="all" />
    <ProjectReference Include="../.modules/OpenTabletDriver.External.Bulletproof/OpenTabletDriver.External.Common/OpenTabletDriver.External.Common.csproj" />
    <ProjectReference Include="../.modules/OTD.EnhancedOutputMode.Bulletproof/OTD.EnhancedOutputModeLib/OTD.EnhancedOutputModeLib.csproj" />
  </ItemGroup>
</Project>
